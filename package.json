{
  "name": "nodejs-event-manager",
  "description": "A nodeJS Event Manager to emit, and listen event through nodeJS",
  "author": {
    "email": "rgoyard@gmail.com",
    "name": "RÃ©mi Goyard",
    "url": "https://www.mimiz.fr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mimiz/nodejs-event-manager.git"
  },
  "version": "1.1.2",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "license": "MIT",
  "keywords": [
    "Event",
    "event-manager",
    "event emitter"
  ],
  "scripts": {
    "setup": "yarn",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test mocha --exit --recursive \"./test/**/*.test.ts\"",
    "coverage": "cross-env NODE_ENV=test RABBITMQ_EVENT_MANAGER_TRANSPORT_MODE=mute nyc --all mocha --exit --recursive \"./test/**/*.test.ts\"",
    "prebuild": "rimraf build",
    "lint": "yarn run lint:format && yarn run lint:quality",
    "lint:fix": "yarn run lint:format:fix && yarn run lint:quality:fix",
    "lint:format": "yarn run precommit:format \"./**/*.ts\"",
    "lint:quality": "yarn run precommit:quality src/**/*.ts test/**/*.ts",
    "lint:format:fix": "yarn run lint:format --write",
    "lint:quality:fix": "yarn run lint:quality --fix",
    "precommit:format": "prettier --check \"./{src,test}/**/*.ts\"",
    "precommit:quality": "tslint src/**/*.ts test/**/*.ts",
    "demo:cloudamqp": "ts-node demo/cloudamqp/run.ts",
    "demo:docker": "ts-node demo/docker/run.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/sinon": "^7.0.11",
    "@types/triple-beam": "^1.3.0",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.3.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit:format && yarn precommit:quality",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "emittery": "^0.4.1",
    "logform": "^2.1.2",
    "triple-beam": "^1.3.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  }
}
